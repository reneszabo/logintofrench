{% extends 'MainPageFrontendBundle:Default:base.html.twig' %}

{% block stylesheets %}
  {{ parent() }}
  <style>
    .ltf-promo-box{
      width: 100%; 
      height: 287px
    }
    .ltf-promo-info-box{
      background-color: rgb(51, 51, 102);
      color: white;
      margin-top: 20px;
      margin-bottom: 20px;
      padding: 10px;
    }
