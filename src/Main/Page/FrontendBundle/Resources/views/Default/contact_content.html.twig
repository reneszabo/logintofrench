<style type="text/css">
  .same-height{
    height: 500px;
    padding-top: 20px;
  }
  form label{
    display: none;
  }
</style>
<div class="container" style="margin-top: 40px;">
  <div class="row">
    <div class="col-md-8 contact-us-form same-height " >
      <h3 style="color: white;">{% trans %}contact.title{% endtrans %}</h3>
      <form id="form-contact-us" action="{{ path('email_form') }}" method="POST" class="form" role="form">
        <div class="row">
          <div class="col-sm-4">
            <div class="form-group">
              {{ form_row(form.name) }}
            </div>
          </div>
          <div class="col-sm-4">
            <div class="form-group">
              {{ form_row(form.email) }}
            </div>
          </div>
          <div class="col-sm-4">
            <div class="form-group">
              {{ form_row(form.phone) }}
            </div>
          </div>
        </div>
        <div class="form-group">
          {{ form_row(form.address) }}
        </div>
        <div class="form-group">
          {{ form_row(form.subject) }}
        </div>
        <div class="form-group">
          {{ form_row(form.message) }}
        </div>
        <div style="text-align: right;">
          {{ form_widget(form.save_me) }}
          {{ form_widget(form.save) }}
        </div>
        {{ form_rest(form) }}
      </form>
    </div>
    <div class="col-md-4 contact-us-directions same-height">
      <div >
        <h2 class="blue">Book Your Lesson</h2>
        <table>
          <tbody>
            <tr>
              <th class="table-contactanos-th">{{ 'contact.phone'|trans }}:</th>
              <td><p>+1 754-223-8834</p></td>
            </tr>
            <tr>
              <th class="table-contactanos-th">{{ 'contact.emailsmall'|trans }}:</th>
              <td><p><a href="mailto:lauragramirez@logintofrench.com">lauragramirez@logintofrench.com</a></p></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>